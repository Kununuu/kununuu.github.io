---
// src/components/HomePageHeader.astro
// (Oder wie auch immer du die Datei nennen möchtest)

// Hier könnten später Props oder Logik stehen, aktuell nicht benötigt.
const navLinks = [
  { name: "HOME", href: "/" },
  { name: "STORE", href: "/" }, // Passe die Links an
  { name: "BIO & RANCHITO", href: "/" },
  { name: "ANNA", href: "/" },
  { name: "SISTERS", href: "/" },
  { name: "INSTA", href: "#" }, // Link zum Instagram Profil
];

// Neues Bild: Zwei Mädchen mit Pferden (Portrait)
const heroImageUrl = "https://images.unsplash.com/photo-1696866614151-5254858f603f?q=80&w=3271&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"; // Unsplash: https://unsplash.com/photos/two-women-standing-beside-horses-during-golden-hour-1500534314209-a25ddb2bd429
---

<header class="site-header">
  <nav class="main-navigation">
    <div class="nav-container">
      <div class="nav-left">
        <a href="/" class="brand-logo">TWO SISTERS</a>
      </div>
      <div class="nav-center">
        <ul>
          {navLinks.map(link => (
            <li><a href={link.href}>{link.name}</a></li>
          ))}
        </ul>
      </div>
    </div>
  </nav>

  <section class="hero-section">
    <div class="hero-content">
      <p class="pre-headline">HEY THERE!</p>
      <h1 class="main-headline">Daria & Aline,<br />zwei Schwestern – ein Abenteuer</h1>
      <p class="sub-headline">
        Zwei Pferdemädchen, die das Landleben lieben, Tiere über alles stellen und ihre Abenteuer auf Instagram teilen. Begleite Daria und Aline auf ihrem Weg zwischen Stall, Selfies und jeder Menge Herz!
      </p>
      <a href="#more-info" class="cta-button">
        MEHR ERFAHREN
      </a>
    </div>
  </section>
</header>

<style define:vars={{ heroImageUrl: `url(${heroImageUrl})` }}>
  /* Globale Styles (könnten auch in einer globalen CSS-Datei sein) */
  :root {
    --nav-bg-color: #28282B; /* Dunkles Grau, ähnlich Mockup */
    --nav-text-color: #EAEAEA;
    --nav-link-hover-color: #FFFFFF;
    --hero-text-color: #FFFFFF;
    --button-bg-color: #FADADD; /* Helles Rosa/Pfirsich */
    --button-text-color: #333333; /* Dunklerer Text für Kontrast auf hellem Button */
    --button-hover-bg-color: #F8C8CD;
    --serif-font: Georgia, 'Times New Roman', Times, serif;
    --sans-serif-font: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  }

  .site-header {
     /* Kein Margin unten, da Hero direkt anschließt */
  }

  /* Navigation */
  .main-navigation {
    background-color: var(--nav-bg-color);
    color: var(--nav-text-color);
    padding: 0.8rem 2rem; /* Etwas Padding oben/unten und seitlich */
    border-bottom: 1px solid #444; /* Leichte Trennlinie */
  }

  .nav-container {
    display: flex;
    justify-content: center; /* Navigation mittig ausrichten */
    align-items: center;
    max-width: 1300px;
    margin: 0 auto;
    gap: 2rem; /* Abstand zwischen Logo und Navigation */
  }
  .nav-left {
    margin-right: 2rem;
  }
  .nav-center {
    flex: 1;
    display: flex;
    justify-content: center;
  }
  /* .nav-right entfernt */

  .nav-left .brand-logo {
    color: var(--nav-text-color);
    text-decoration: none;
    font-weight: bold;
    font-family: var(--sans-serif-font);
    font-size: 1.1rem;
  }

  .nav-center ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    gap: 2.5rem; /* Abstand zwischen Links */
  }

  .nav-center ul li a {
    color: var(--nav-text-color);
    text-decoration: none;
    font-family: var(--sans-serif-font);
    font-size: 0.8rem; /* Kleinere Schrift */
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: color 0.2s ease;
  }

  .nav-center ul li a:hover {
    color: var(--nav-link-hover-color);
  }

  /* Hero Sektion */
  .hero-section {
    background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), var(--heroImageUrl); /* Overlay + Bild */
    background-size: cover;
    background-position: center center;
    min-height: 75vh; /* Mindesthöhe, damit Bild sichtbar ist */
    display: flex;
    align-items: center; /* Vertikal zentrieren */
    padding: 4rem 2rem; /* Innenabstand */
    color: var(--hero-text-color);
  }

  .hero-content {
    max-width: 600px; /* Maximale Breite des Textinhalts */
    margin-left: 5%; /* Etwas Abstand vom linken Rand */
  }

  .pre-headline {
    font-family: var(--sans-serif-font);
    text-transform: uppercase;
    font-size: 0.9rem;
    letter-spacing: 0.1em;
    margin-bottom: 0.5rem;
  }

  .main-headline {
    font-family: var(--serif-font);
    font-size: 4.5rem; /* Sehr groß */
    font-weight: normal;
    line-height: 1.1;
    margin-top: 0;
    margin-bottom: 1.5rem;
  }

  .sub-headline {
    font-family: var(--sans-serif-font);
    font-size: 1rem;
    line-height: 1.6;
    max-width: 90%; /* Nicht ganz so breit wie Headline */
    margin-bottom: 2rem;
    opacity: 0.9; /* Etwas transparenter */
  }

  .cta-button {
    display: inline-block;
    background-color: var(--button-bg-color);
    color: var(--button-text-color);
    padding: 1rem 2.5rem;
    border-radius: 50px; /* Stark abgerundet */
    text-decoration: none;
    font-family: var(--sans-serif-font);
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-size: 0.9rem;
    border: none;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }

  .cta-button:hover {
    background-color: var(--button-hover-bg-color);
  }

  /* Responsive Anpassungen (Beispiel) */
  @media (max-width: 900px) {
    .nav-center {
      display: none; /* Menü für Mobile ausblenden (braucht Burger-Menü Logik) */
    }
     .main-headline {
        font-size: 3rem;
    }
    .hero-content {
        margin-left: 0;
        text-align: center; /* Text zentrieren auf Mobile */
        max-width: 100%;
    }
     .sub-headline {
        max-width: 80%;
        margin-left: auto;
        margin-right: auto;
    }
  }
   @media (max-width: 600px) {
     .main-navigation {
       padding: 0.8rem 1rem;
     }
     .nav-right {
       gap: 1rem;
     }
     .hero-section {
       min-height: 60vh;
       padding: 2rem 1rem;
     }
      .main-headline {
        font-size: 2.5rem;
    }
     .sub-headline {
        font-size: 0.9rem;
     }
     .cta-button {
        padding: 0.8rem 2rem;
        font-size: 0.8rem;
     }
   }

</style>