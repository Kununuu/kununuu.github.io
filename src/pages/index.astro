---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import HomePageHeader from '../components/HomePageHeader.astro';
import SisterProfileSection from '../components/SistersProfileSection.astro';

const heroImageUrl = "https://images.unsplash.com/photo-1696866614151-5254858f603f?q=80&w=3271&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D";
---

<Layout title="Two Sisters - Home">
  <HomePageHeader />

  <section class="hero-section bg-cover bg-center min-h-[75vh] flex items-center text-text-primary" style="background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), var(--heroImageUrl);">
    <div class="hero-content max-w-6xl px-4 sm:px-6 lg:px-8 mx-auto flex flex-col justify-center">
      <p class="pre-headline font-sans uppercase text-[0.9rem] tracking-[0.1em] mb-2">HEY THERE!</p>
      <h1 class="main-headline font-serif text-[4.5rem] font-normal leading-[1.1] mt-0 mb-6">Daria & Aline,<br />zwei Schwestern – ein Abenteuer</h1>
      <p class="sub-headline font-sans text-[1rem] leading-[1.6] max-w-[90%] mb-8 opacity-90">
        Zwei Pferdemädchen, die das Landleben lieben, Tiere über alles stellen und ihre Abenteuer auf Instagram teilen. Begleite Daria und Aline auf ihrem Weg zwischen Stall, Selfies und jeder Menge Herz!
      </p>
      <a href="#more-info" class="cta-button inline-block bg-primary text-secondary py-4 px-10 rounded-full no-underline font-sans font-bold uppercase tracking-[0.05em] text-[0.9rem] border-none cursor-pointer transition-colors duration-200 hover:bg-hover w-auto self-start">
        MEHR ERFAHREN
      </a>
    </div>
  </section>

  <main>
    {/* Hier kommt der Rest deiner Seite hin (z.B. die Sektion mit den runden Bildern) */}
	<SisterProfileSection>
    <section style="padding: 50px; text-align: center;">
      <h2>Nächster Abschnitt hier...</h2>
      <p>Hier kannst du die nächste Sektion (z.B. die "About Us"-Blöcke) einfügen.</p>
    </section>
  </main>

</Layout>

<style define:vars={{ heroImageUrl: `url(${heroImageUrl})` }}>
</style>
