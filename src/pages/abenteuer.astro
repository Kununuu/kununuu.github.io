---
import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '../layouts/Layout.astro';
const posts = (await getCollection('abenteuer')).filter(post => !post.data.draft);
---

<Layout title="Abenteuer | Chaos Kilz Club">
  <h1>Abenteuer</h1>
  {posts.length === 0 ? (
    <p>Es sind noch keine Abenteuer-Posts vorhanden.</p>
  ) : (
    <ul style="max-width: 700px; margin: 2rem auto; padding: 0; list-style: none;">
      {posts.map((post: CollectionEntry<'abenteuer'>) => (
        <li style="margin-bottom: 2.5rem; border-bottom: 1px solid #eee; padding-bottom: 2rem;">
          <a href={"/abenteuer/" + post.slug} style="font-size: 1.4rem; font-weight: bold; color: #28282B; text-decoration: none;">
            {post.data.title}
          </a>
          <div style="color: #888; font-size: 0.95rem; margin: 0.2rem 0 0.7rem 0;">
            {post.data.pubDate.toLocaleDateString()} {post.data.author ? `â€“ ${post.data.author}` : ''}
          </div>
          <p style="margin: 0 0 0.7rem 0; color: #444;">{post.data.description}</p>
        </li>
      ))}
    </ul>
  )}
</Layout>
