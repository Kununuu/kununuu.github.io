---
import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import HomePageHeader from '../components/HomePageHeader.astro';

const posts = (await getCollection('abenteuer')).filter(post => !post.data.draft);
---

<Layout title="Two Sisters - Abenteuer">
  <HomePageHeader />

  <div class="recommendations-header text-center py-16 bg-gray-50">
    <nav class="breadcrumb flex justify-center gap-2 text-gray-500 mb-6">
      <a href="/" class="hover:text-gray-900">Home</a>
      <span>/</span>
      <span>Abenteuer</span>
    </nav>
    <h1 class="recommendations-title text-4xl font-bold text-gray-900 mb-2">Abenteuer</h1>
    <div class="recommendations-subtitle text-gray-500 tracking-[0.1em]">UNSERE GESCHICHTEN & ERLEBNISSE</div>
  </div>

  <div class="recommendations-controls flex justify-between items-center py-4 px-4 sm:px-6 lg:px-8 mx-auto max-w-6xl my-8">
    <span>Zeige 1–{posts.length} von {posts.length} Ergebnissen</span>
    <div class="sorting">
      <label for="sort-select" class="sr-only">Sortierung</label>
      <select id="sort-select" class="p-2 border border-gray-300 rounded-md bg-white text-gray-700">
        <option>Neueste zuerst</option>
      </select>
    </div>
  </div>

  {posts.length === 0 ? (
    <p class="text-center my-8">Es sind noch keine Abenteuer-Posts vorhanden.</p>
  ) : (
    <div class="recommendations-grid grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 px-4 sm:px-6 lg:px-8 mx-auto max-w-6xl">
      {posts.map((post: CollectionEntry<'abenteuer'>) => (
        <div class="recommendation-card bg-white rounded-lg overflow-hidden shadow-md transition-transform duration-200 hover:-translate-y-1">
          <a href={"/abenteuer/" + post.slug} class="card-link no-underline text-inherit">
            {post.data.image && (
              <img 
                src={post.data.image} 
                alt={post.data.title}
                class="card-image w-full h-48 object-cover"
              />
            )}
            <div class="card-content p-6">
              <h2 class="card-title text-xl font-bold text-gray-900 mb-2">{post.data.title}</h2>
              <p class="card-meta text-sm text-gray-500 mb-3">{post.data.pubDate.toLocaleDateString()} {post.data.author ? `– ${post.data.author}` : ''}</p>
              <p class="card-description text-gray-600 leading-relaxed">{post.data.description}</p>
            </div>
          </a>
        </div>
      ))}
    </div>
  )}

  <main class="mb-16">
    {/* Hier kommt der Rest deiner Seite hin (z.B. die Sektion mit den runden Bildern) */}
  </main>
</Layout>
