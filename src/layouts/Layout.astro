---
// src/layouts/Layout.astro
import Footer from '../components/Footer.astro';

// Nimmt den Seitentitel als 'prop' entgegen
interface Props {
	title: string;
}
const { title } = Astro.props;

// Hier könntest du globale Daten laden oder Skripte importieren
---

<!DOCTYPE html>
<html lang="de"> {/* Sprache auf Deutsch setzen */}
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width" /> {/* Wichtig für Responsive Design */}
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" /> {/* Platzhalter für Favicon */}
	<meta name="generator" content={Astro.generator} />

	<title>{title}</title> {/* Setzt den Seitentitel aus der Prop */}

  {/* Hier könntest du globale Stylesheets oder Webfonts laden */}
  <style is:global>
    /* Einfacher CSS Reset und Basis-Styles */
    :root {
      /* Definiere hier globale CSS-Variablen, falls gewünscht */
      --serif-font: Georgia, 'Times New Roman', Times, serif;
      --sans-serif-font: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    }

    html {
      box-sizing: border-box;
      font-family: var(--sans-serif-font); /* Standard-Schriftart */
      line-height: 1.6;
      background-color: #f8f8f8; /* Heller Hintergrund für Body-Inhalt unterhalb des Headers */
      color: #333;
    }
    *, *:before, *:after {
      box-sizing: inherit;
    }

    body {
      margin: 0; /* Entfernt Standard-Body-Margin */
      padding: 0;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    main {
      flex-grow: 1; /* Sorgt dafür, dass der Hauptinhalt den verfügbaren Platz einnimmt */
    }

    /* Weitere globale Styles hier... */
    h1, h2, h3 {
      margin-top: 0;
    }

    img {
      max-width: 100%;
      height: auto; /* Stellt sicher, dass Bilder nicht überlaufen */
    }

  </style>
</head>
<body>
	<slot /> {/* Hier wird der Inhalt der Seite (z.B. aus index.astro) eingefügt */}
	<Footer />
  {/* Hier könntest du globale Skripte einfügen, die am Ende des Bodys geladen werden sollen */}
</body>
</html>