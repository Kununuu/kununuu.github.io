---
// src/layouts/Layout.astro
import Footer from '../components/Footer.astro';

// Nimmt den Seitentitel als 'prop' entgegen
interface Props {
	title: string;
}
const { title } = Astro.props;

// Hier könntest du globale Daten laden oder Skripte importieren
---

<!DOCTYPE html>
<html lang="de"> {/* Sprache auf Deutsch setzen */}
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width" /> {/* Wichtig für Responsive Design */}
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" /> {/* Platzhalter für Favicon */}
	<meta name="generator" content={Astro.generator} />

	<title>{title}</title> {/* Setzt den Seitentitel aus der Prop */}

  {/* Hier könntest du globale Stylesheets oder Webfonts laden */}
  <style is:global>
    @tailwind base;
    @tailwind components;
    @tailwind utilities;

    html {
      @apply font-sans leading-relaxed bg-gray-50 text-gray-900;
    }

    body {
      @apply min-h-screen m-0 p-0;
    }

    h1, h2, h3 {
      @apply mt-0;
    }

    img {
      @apply max-w-full h-auto;
    }
  </style>
</head>
<body>
	<slot /> {/* Hier wird der Inhalt der Seite (z.B. aus index.astro) eingefügt */}
	<Footer />
  {/* Hier könntest du globale Skripte einfügen, die am Ende des Bodys geladen werden sollen */}
</body>
</html>
